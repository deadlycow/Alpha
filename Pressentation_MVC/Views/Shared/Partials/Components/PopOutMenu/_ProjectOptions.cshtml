<link rel="stylesheet" href="~/css/components/popOutMenu/_projectOptions.css" asp-append-version="true" />
@model ProjectViewModel
<div data-display="true" class="project-options-container">
    <a data-modal="true" data-target="#editProjectModal" data-id="@Model.Id" class="options-group">
        <img src="~/images/edit-icon.svg" />
        Edit
    </a>
    <a class="options-group">
        <img src="~/images/add-user-icon.svg" />
        Add Member
    </a>
    <a data-delete="true" data-controller="projects" data-id="@Model.Id" class="options-group">
        <img src="~/images/delete-icon.svg" />
        Delete Project
    </a>
</div>

