        .dropdown {
            position: absolute;
            width: 100%;
            border: 1px solid #ccc;
            background: white;
            max-height: 150px;
            overflow-y: auto;
            display: none;
            top: 2.2rem;
            z-index: 3;
        }

            .dropdown div {
                padding: 8px;
                cursor: pointer;
            }

                .dropdown div:hover {
                    background: #f0f0f0;
                }

        .selected-list {
            margin-top: 10px;
        }

        .selected-item {
            display: flex;
            align-items: center;
            margin: 5px 0;
        }

        .remove-btn {
            margin-left: 10px;
            cursor: pointer;
            color: red;
        }
