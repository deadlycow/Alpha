<link rel="stylesheet" href="~/css/components/_SideNav.css" />

<partial name="Partials/Components/_AlphaLogo" />
<ul class="side-nav-list">
    <li>
        <a class="side-nav-link @(Context.Request.Path == "/" ? "active" : "")" asp-controller="Projects" asp-action="Project">
            <img class="nav-icon" src="~/images/projects-icon.svg" alt="portfolio icon" />
            Projects
        </a>
    </li>
    @if (User.IsInRole("Admin"))
    {
        <li>
            <a class="side-nav-link @(Context.Request.Path == "/team" ? "active" : "")" asp-controller="Members" asp-action="Member">
                <img class="nav-icon" src="~/images/contacts-icon.svg" alt="portfolio icon" />
                Team Members
            </a>
        </li>
        <li>
            <a class="side-nav-link @(Context.Request.Path == "/clients" ? "active" : "")" asp-controller="Clients" asp-action="Client">
                <img class="nav-icon" src="~/images/handshake-icon.svg" alt="portfolio icon" />
                Clients
            </a>
        </li>
    }
</ul>