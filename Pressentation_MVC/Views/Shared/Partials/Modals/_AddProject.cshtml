@using Pressentation_MVC.ViewModels
@model ProjectViewModel
<link rel="stylesheet" href="~/css/modals/_addProject.css" asp-append-version="true" />


<div id="addProjectModal" class="modal-overlay">
    <div class="bg-modal">
        <div class="member-header">
            <h2>New Member</h2>
            <img class="close-modal" data-close="true" src="~/images/close-icon.svg" />
        </div>
        <div class="image-previewer square ">
            <img class="image-preview" src="" />
            <input accept="image/*" class="hide" />
        </div>
        <form novalidate>
            <div class="form-group-flex">
                <div class="form-group">
                    <label asp-for="StartDate"></label>
                    <div class="field-group">
                        <input asp-for="StartDate" />
                        <span></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="EndDate"></label>
                    <div class="field-group">
                        <input asp-for="EndDate" />
                        <span></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <div class="field-group">
                    <input asp-for="Name" />
                    <span></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <div class="field-group">
                    <input asp-for="Description" />
                    <span></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Budget"></label>
                <div class="field-group">
                    <input asp-for="Budget" />
                    <span></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Add Contact</button>
        </form>
    </div>
</div>