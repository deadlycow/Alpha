<link rel="stylesheet" href="~/css/modals/_addClient.css" asp-append-version="true" />
@model ClientViewModel

<div id="addClientModal" class="modal-overlay">
    <div class="bg-modal">
        <div class="client-header">
            <h2>New Client</h2>
            <img class="close-modal" data-close="true" src="~/images/close-icon.svg" />
        </div>
        <form id="form-reg" asp-action="CreateClient" asp-controller="Clients" novalidate>
            <div class="image-previewer square">
                <img class="image-preview" src="" />
                <input asp-for="ImgFile" type="file" accept="image/*" class="hide" />
            </div>

            <div class="form-group">
                <label asp-for="Name"></label>
                <div class="field-group">
                    <input asp-for="Name" />
                    <span asp-validation-for="Name"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Add Client</button>
        </form>
    </div>
</div>

<script src="~/js/modals.js" type="module" asp-append-version="true"></script>