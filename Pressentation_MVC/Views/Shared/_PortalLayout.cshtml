<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pressentation_MVC</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layouts/_PortalLayout.css" asp-append-version="true" />

</head>
<body>
    <div class="center-screen">
        <div class="border-div">
            @RenderBody()
        </div>
    </div>
    @await Html.PartialAsync("Scripts/_ValidationScript")
    @await Html.PartialAsync("Scripts/_ShowPasswordScript")
    @* @await Html.PartialAsync("Scripts/_AccountHandlerScript") *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>